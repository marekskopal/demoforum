	<title>{ifset title}{include title|stripHtml} | {/ifset}Demoforum</title>

	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="{$basePath}/css/styles.min.css">
	{block head}{/block}
</head>

<body>
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark justify-content-between">
		<a n:href="default" class="navbar-brand" href="#">Demoforum</a>

		<a n:href="Login:logout" class="btn btn-error">Logout</a>
	</nav>


	<div n:foreach="$flashes as $flash" n:class="flash, $flash->type">{$flash->message}</div>

	<section id="main">
		<div class="container">
			<div class="row justify-content-sm-center">
				<div class="col-sm-8">
					{include content}
				</div>
			</div>
		</div>
	</section>

	{block scripts}
	<script src="{$basePath}/js/vendor.js"></script>
	<script src="https://nette.github.io/resources/js/netteForms.min.js"></script>
	<script src="{$basePath}/js/main.js"></script>
	{/block}
</body>
</html>
